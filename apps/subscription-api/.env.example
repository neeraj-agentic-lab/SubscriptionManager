# Environment variables for subscription-api
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/subscription_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Spring Profile
SPRING_PROFILES_ACTIVE=development

# Server Configuration
SERVER_PORT=8080

# JWT Configuration
JWT_ISSUER_URI=https://your-auth-provider.com

# Cloud-specific configurations (uncomment based on your cloud)

# GCP Cloud SQL
# DATABASE_URL=jdbc:postgresql:///subscription_db?cloudSqlInstance=PROJECT:REGION:INSTANCE&socketFactory=com.google.cloud.sql.postgres.SocketFactory

# AWS RDS
# DATABASE_URL=jdbc:postgresql://your-rds-endpoint.amazonaws.com:5432/subscription_db

# Azure PostgreSQL
# DATABASE_URL=jdbc:postgresql://your-server.postgres.database.azure.com:5432/subscription_db?sslmode=require
